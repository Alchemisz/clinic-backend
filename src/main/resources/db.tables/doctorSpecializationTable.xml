<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="3" author="Adrian">

        <createTable tableName="DOCTOR_SPECIALIZATION">
            <column name="DOCTOR_FK" type="bigint">
                <constraints nullable="false" foreignKeyName="FK_DOCTOR" referencedTableName="doctor" referencedColumnNames="id"/>
            </column>
            <column name="SPECIALIZATION_FK" type="varchar(30)">
                <constraints nullable="false" foreignKeyName="FK_SPECIALIZATION" referencedTableName="specialization" referencedColumnNames="name"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
